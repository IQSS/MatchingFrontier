citHeader("To cite 'MatchingFrontier' in publications use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry("Manual",
         title        = "{MatchingFrontier}: Computation of the Balance-Sample Size Frontier in Matching Methods for Causal Inference",
         author       = c(person("Gary", "King"),
                          person("Christopher", "Lucas"),
                          person(c("Richard", "A."), "Nielsen")),
         year         = year,
         url          = "https://cran.r-project.org/package=MatchingFrontier",
         note         = note,
         textVersion  =
             paste0("King, Gary, Christopher Lucas, and Richard Nielsen. ", year,
                   ". Computation of the Balance-Sample Size Frontier in Matching Methods for Causal Inference. ",
                   note, ".")
         )

bibentry("Article",
         title        = "The Balance-Sample Size Frontier in Matching Methods for Causal Inference",
         author       = c(person("Gary", "King"),
                          person("Christopher", "Lucas"),
                          person(c("Richard", "A."), "Nielsen")),
         year         = "2017",
         url          = "http://projects.iq.harvard.edu/frontier",
         journal      = 'American Journal of Political Science',
         doi          = '10.1111/ajps.12272',
         volume       = '61',
         number       = '2',
         pages        = '473-489',
         textVersion  = 'King, Gary, Christopher Lucas, and Richard A. Nielsen. 2017. "The Balance-Sample Size Frontier in Matching Methods for Causal Inference." American Journal of Political Science 61(2): 473-89.',
         header       = "For the underlying method please cite the following paper:"
         )
